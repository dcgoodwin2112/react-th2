// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String    @id @default(cuid())
  username         String    @unique
  email            String    @unique
  favoriteProducts Product[]
}

model Product {
  id          String     @id @default(cuid())
  sku         String     @unique
  name        String
  description String
  stock       Int
  cost        Float
  categories  Category[]
  favorites   User[]
}

model Category {
  id       String    @id @default(cuid())
  term     String    @unique
  products Product[]
}
